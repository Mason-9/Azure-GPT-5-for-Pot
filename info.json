{
  "id": "plugin.com.pot-app.azure_gpt5",
  "plugin_type": "translate",
  "icon": "lingva.svg",
  "display": "azure_gpt5",
  "homepage": "https://github.com/Mason-9/Azure-GPT-5-for-Pot",
  "needs": [
    { "key": "endpoint",       "display": "Endpoint（格式形如:https://<your_resource_name>.cognitiveservices.azure.com/）", "type": "input" },
    { "key": "apiKey",         "display": "API Key",                              "type": "input" },
    { "key": "deployment",     "display": "Deployment 名称",                       "type": "input" },
    { "key": "apiVersion",     "display": "API Version（默认 2024-12-01-preview）", "type": "input" },
    { "key": "model",          "display": "Model（可选）",                         "type": "input" },

    { "key": "systemTemplate", "display": "System Prompt（支持 $text $from $to $detect）", "type": "textarea" },
    { "key": "userTemplate",   "display": "User Prompt（支持 $text $from $to $detect）",   "type": "textarea" },

    { "key": "maxTokens",      "display": "Max Completion Tokens（可选）",          "type": "input" },
    { "key": "temperature",    "display": "Temperature（现阶段请留空；GPT5-系列目前只支持默认值）", "type": "input" }
  ],
  "language": {
    "auto": "auto",
    "zh_cn": "zh",
    "zh_tw": "zh_HANT",
    "en": "en",
    "ja": "ja",
    "ko": "ko",
    "fr": "fr",
    "es": "es",
    "ru": "ru",
    "de": "de",
    "it": "it",
    "tr": "tr",
    "pt_pt": "pt",
    "pt_br": "pt",
    "vi": "vi",
    "id": "id",
    "th": "th",
    "ms": "ms",
    "ar": "ar",
    "hi": "hi",
    "mn_cy": "mn",
    "mn_mo": "mn",
    "km": "km",
    "nb_no": "no",
    "nn_no": "no",
    "fa": "fa"
  }
}
